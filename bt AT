#include<bits/stdc++.h>
using namespace std;
int main(){
    ios_base::sync_with_stdio(false);
        cin.tie(0);
        cout.tie(0);
    int N;
    cin>>N;
    long long int a[N];
    for (int i = 0; i < N; i++)
    {
        cin>>a[i];
    }
    long long int sum1=0,sum2=-1e18;
    for(int i=0;i<N;i++){
        sum1+=a[i];
        sum2=max(sum1,sum2);
        if(sum1<0){
            sum1=0;}
    }
    cout<<sum2;
    return 0;
}
